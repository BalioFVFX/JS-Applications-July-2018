<section id="viewComments">
    {{> nav}}
    <div class="post">
        <div class="col thumbnail">
            <a href="http://sammyjs.org/docs/api/0.7.4/all#Sammy.RenderContext-load">
                <img src="{{linkImgUrl}}">
            </a>
        </div>
        <div class="post-content">
            <div class="title">
                <a href="{{linkUrl}}">
                    {{linkTitle}}
                </a>
            </div>
            <div class="details">
                {{#if linkDescription}}
                <p>{{linkDescription}}.</p>
                {{else}}
                    <p>No description</p>
                {{/if}}
                <div class="info">
                    {{linkDate}}
                </div>

                <div class="controls">
                    {{#if islinkauthor}}
                    <ul>
                        <li class="action"><a class="editLink" href="#/edit/{{linkId}}">edit</a></li>
                        <li class="action"><a class="deleteLink" href="#/delete/{{linkId}}">delete</a></li>
                    </ul>
                    {{/if}}
                </div>

            </div>
        </div>
        <div class="clear"></div>
    </div>
    <div class="post post-content">
        <form id="commentForm" action="#/comments/#{{linkId}}" method="post">
            <label>Comment</label>
            <textarea name="content" type="text"></textarea>
            <input type="submit" value="Add Comment" id="btnPostComment">
        </form>
    </div>
    {{#if comments}}
    {{#each comments}}
    <article class="post post-content">
        <p>{{content}}</p>
        <div class="info">
            {{date}} by {{author}} | {{#if isAuthor}}
            <a href="#/deleteComment/:{{_id}}" class="deleteLink">delete</a>
            {{/if}}
        </div>
    </article>
    {{/each}}
    {{else}}
        <p>No comments yet</p>
    {{/if}}
</section>